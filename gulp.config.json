{
    "paths": {
        "entry": "src/main/main.ts",
        "src": "src/**/*.ts",
        "main": "src/main/**/*.ts",
        "test": "src/test/**/*Test.ts",
        "copy": [
            "src/main/index.html",
            "src/main/assets/**/*",
            "node_modules/phaser-ce/build/phaser.min.js",
            "node_modules/phaser-ce/build/phaser.map"
        ],
        "destination": "dist",
        "bundle": "game.min.js"
    },
    "tslint": {
        "options": {
            "formatter": "stylish"
        },
        "report": {
            "emitError": false
        }
    },
    "mocha": {
        "reporter": "dot",
        "require": [
            "jsdom-global/register",
            "ts-node/register",
            "tsconfig-paths/register",
            "source-map-support/register"
        ]
    },
    "rollup": {
        "name": "pong",
        "format": "iife"
    }
}