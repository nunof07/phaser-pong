{
    "main": "src/remake/main/main.ts",
    "dist": "dist",
    "bundle": "game.js",
    "src": "src/remake/**/*.ts",
    "test": "src/remake/test/**/*Test.ts",
    "copy": [
        "src/index.html",
        "src/assets/**/*",
        "node_modules/phaser-ce/build/phaser.min.js",
        "node_modules/phaser-ce/build/phaser.map",
        "node_modules/smalltypes/dist/index.js"
    ],
    "browserify": {
        "basedir": ".",
        "debug": true,
        "cache": {},
        "packageCache": {},
        "ignoreMissing": false,
        "require": []
    },
    "babel": {
        "extensions": [
            ".js",
            ".ts"
        ]
    },
    "tslint": {
        "formatter": "stylish"
    },
    "mocha": {
        "reporter": "dot",
        "require": [
            "jsdom-global/register",
            "ts-node/register",
            "tsconfig-paths/register",
            "source-map-support/register"
        ]
    }
}