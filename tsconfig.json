{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": ".",
        "sourceMap": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "paths": {
            "@base/*": ["src/ecs/base/*"],
            "@core/*": ["src/ecs/core/*"],
            "@phaser/*": ["src/ecs/phaser/*"],
            "@pong/*": ["src/ecs/pong/*"],
            "@system/*": ["src/ecs/system/*"],
            "@main/*": ["src/remake/main/*"],
            "@test/*": ["src/remake/test/*"]
        }
    }
}
