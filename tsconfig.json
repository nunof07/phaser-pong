{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": ".",
        "sourceMap": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "paths": {
            "@main/*": ["src/main/*"],
            "@test/*": ["src/test/*"]
        }
    }
}
